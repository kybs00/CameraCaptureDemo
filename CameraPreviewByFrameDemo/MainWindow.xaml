<Window x:Class="MediaCapturePreviewByBytesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="CaptureImage" Stretch="UniformToFill"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="StartButton" Content="开始录制" Click="StartButton_OnClick"></Button>
            <Button x:Name="StopButton" Content="结束录制" Click="StopButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
